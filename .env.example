# Environment Variables Template for Bank Statement Analyzer
# Copy this file to .env or start from .env.dev / .env.prod as needed
# DO NOT commit .env file (contains secrets)

# ==========================================
# Application Settings
# ==========================================
ENV=production
API_PORT=8001
LOG_LEVEL=info

# ==========================================
# Database Configuration
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bank_statements
DB_USER=postgres
DB_PASSWORD=changeme_secure_password

# Full connection string (alternative to above)
DATABASE_URL=postgresql://postgres:changeme_secure_password@localhost:5432/bank_statements

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ==========================================
# AWS Configuration
# ==========================================
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET=bank-statements-1761407671
USE_LOCALSTACK=false

# ==========================================
# LocalStack (for local development)
# ==========================================
# Uncomment to use LocalStack instead of AWS S3
# USE_LOCALSTACK=true
# LOCALSTACK_ENDPOINT=http://localhost:4566
# S3_BUCKET_LOCAL=bank-statements-local

# ==========================================
# AI Configuration (Legacy - Optional)
# ==========================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048

# ==========================================
# Processing
# ==========================================
DEFAULT_BANK=scb

